<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NormalTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.7</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="NumberTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="SmallTitleTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="SubtitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.7</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="SmallNumberTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="RadioDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorControlNormal">@color/purple_500</item>
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="android:buttonBarButtonStyle">@color/purple_500</item>
    </style>

</resources>